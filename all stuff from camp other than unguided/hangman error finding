import random

HANGMANPICS = ['''
 +---+
 |   |
     |
     |
     |
     |
=========''', '''

 +---+
 |   |
 O   |
     |
     |
     |
=========''', '''

 +---+
 |   |
 O   |
 |   |
     |
     |
=========''', '''

 +---+
 |   |
 O   |
/|   |
     |
     |
=========''', '''

 +---+
 |   |
 O   |
/|\  |
     |
     |
=========''', '''

 +---+
 |   |
 O   |
/|\  |
/    |
     |
=========''', '''

 +---+
 |   |
 O   |
/|\  |
/ \  |
     |
=========''']




def getGuess(guessedLetters):
  while True:
    guess = input("Guess a letter:\n")
    guess = guess.lower()
    if(len(guess)) != 1:
      print("\nPlease choose just one letter")
    elif guess not in "abcdefghijklmnopqrstuvwxyz":
      print("\nPlease enter a letter in the alphabet")
    elif guess in guessedLetters:
      print("You already guessed that one :)\n ")
    else:
      return guess
      
def getRandomWord(wordList):
  wordIndex = random.randint(0, len(wordList.split())-1)
  return wordList.split()[wordIndex]
  
def displayBoard(HANGMANPICS, missedLetters, correctLetters, myWord):
  print(HANGMANPICS[len(missedLetters)])
  print("You've taken " + str(len(missedLetters)) + " Incorrect guesses.\n")
  for letter in missedLetters:
    print(letter)
  
  blanks = '-' * len(myWord)
  
  for i in range(len(myWord)):
    if myWord[i] in correctLetters:
      blanks = blanks[:i] + myWord[i] + blanks[i+1:]
  print(blanks)
  
words = "mochi dinosaur clam cat balcony tree signature peak lightning backpack"

print("Let's play Hangman!")
myWord = getRandomWord(words)
gameOver = False
correctLetters = ""
missedLetters = ""
while True:
  displayBoard( HANGMANPICS, missedLetters, correctLetters, myWord)
  guess = getGuess (correctLetters + missedLetters)
  
  if guess in myWord:
    correctLetters = correctLetters + guess
    win = True
    for i in range(len(myWord)):
      if myWord[i] not in correctLetters:
        win = False
        break
    if win:
      print("\nCorrect! It is " + myWord)
      gameOver = True
  else:
    missedLetters = missedLetters + guess
    
    if(len(HANGMANPICS) - 1) == len(missedLetters):
      displayBoard(HANGMANPICS, missedLetters, correctLetters, myWord)
      print ("\nYou Lost!")
      print ("\nThe word was: " + myWord)
      gameOver = True
  
  if gameOver:
    answer = input ("Do you want to play again? Y or N\n")
    if answer.upper() == "Y":
      myWord = getRandomWord(words)
      gameOver = False
      correctLetters = ""
      missedLetters = ""
    else:
      break